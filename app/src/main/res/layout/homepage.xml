<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#A9DCEF">

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Post Tickets"
        android:id="@+id/post_ticket_button"
        android:layout_marginTop="50dp"
        android:background="#42B8DD"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:textSize="25dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="View Tckets"
        android:id="@+id/view_ticket_button"
        android:background="#42B8DD"
        android:layout_below="@+id/post_ticket_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="View All Tickets"
        android:id="@+id/view_all_ticket_button"
        android:background="#42B8DD"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/view_ticket_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Customer Support System"
        android:id="@+id/textView2"
        android:textSize="30dp"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#f4000000"
        android:textStyle="bold" />


</RelativeLayout>
